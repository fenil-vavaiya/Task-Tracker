    <style name="SimpleButtonNoPadding" parent="Widget.AppCompat.Button">
        <!-- Text appearance -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Save</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>

        <!-- Button background and tint -->
        <item name="android:background">@drawable/bg_blue_round_corner</item>
        <item name="android:backgroundTint">?attr/pcSyncColor</item>

        <!-- Layout-specific properties -->
        <item name="android:layout_gravity">center</item>

        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <!-- Text appearance -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Save</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <!-- Button background and tint -->
        <item name="android:background">@drawable/bg_blue_round_corner</item>
        <item name="android:backgroundTint">?attr/pcSyncColor</item>

        <!-- Padding -->
        <item name="android:paddingHorizontal">@dimen/_20sdp</item>
        <item name="android:paddingVertical">@dimen/_2sdp</item>

        <!-- Layout-specific properties -->
        <item name="android:layout_gravity">center</item>

        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
    </style>

    <style name="CustomEditTextStyleOneLine">
        <!-- Layout Parameters -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/_5sdp</item>
        <item name="android:includeFontPadding">false</item>
        <!-- Text Appearance -->
        <item name="android:textColor">@color/chinese_black</item>
        <item name="android:textColorHint">@color/manatee</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

        <!-- Input Properties -->
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>

        <!-- Background and Padding -->
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingVertical">@dimen/_10sdp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">5dp</item>

        <!-- Text Alignment -->
        <item name="android:textAlignment">viewStart</item>
    </style>

